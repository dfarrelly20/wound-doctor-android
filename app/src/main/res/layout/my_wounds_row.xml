<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/woundsDesc_Layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/myWoundsRow_LimbNameTextView"
                android:text="limb name"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Change Bandage"
                android:onClick="changeBandage"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:id="@+id/myWoundsRow_ChangeTextView"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/myWoundsRow_ConditionTextView"
                android:layout_marginBottom="5dp"
                android:textColor="#03E40C"
                android:text="Condition: Good"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/myWoundsRow_DateTextView"
                android:layout_marginBottom="5dp"
                android:text="Bandage Changed: "
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/myWoundsRow_ScheduleTextView"
                android:text="Schedule: Every 6 Hours"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

<!--        <Button-->
<!--            android:id="@+id/myWoundsRow_Button"-->
<!--            android:text="Change Bandage"-->
<!--            android:gravity="right|center_vertical"-->
<!--            android:textColor="@color/colorAccent"-->
<!--            android:background="@android:color/transparent"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"/>-->



    </LinearLayout>

</androidx.cardview.widget.CardView>