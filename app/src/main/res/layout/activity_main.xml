                        android:textColor="@color/colorAccent"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign out of your Wound \nDoctor account"
                        android:textSize="13sp" />

                </LinearLayout>

                <ImageButton
